extends head

block title
  |Cadastro de Usuario

block body
  .row
    div(style="height: 15%")
      p Vamos comeÃ§ar... #{user}
      a(href="/logout") sair
  .row
    .col-md-6.col-md-offset-3
      form(method="post", action="/signUp").form.form-horizontal.panel.panel-default
        .panel-body
          .form-group
            label(for="name").control-label.col-md-3 Nome:
            .col-md-6
              input(placeholder="nome", name="name", autofocus).form-control#name
          .form-group
            label(for="email").control-label.col-md-3 Email:
            .col-md-6
              input(placeholder="email", name="email").form-control#email
          .form-group
            hr
          .form-group
            label(for="usuario").control-label.col-md-3 Usuario:
            .col-md-6
              input(placeholder="usuario", name="username").form-control#usuario
          .form-group
            label(for="senha").control-label.col-md-3 Senha:
            .col-md-6
              input(type="password", name="password", placeholder="senha").form-control#senha
          if (message.length > 0)
            .alert.alert-warning.col-sm-12 #{message}
          .form-group
            .col-md-offset-3
              .col-md-3
                a(href="/") Cancelar
              .col-md-3
                button(type="submit").btn.btn-primary.btn-sm Cadastrar
