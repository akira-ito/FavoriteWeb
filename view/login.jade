extends head

block title
  |Login

block body
  .row
    div(style="height: 15%")
  .row
    .col-md-6.col-md-offset-3
      form(method="post", action="/login").form.form-horizontal.panel.panel-default
        .panel-body
          .form-group
            .text-center
              img(src="image/login.png")
          if (message.length > 0)
            .alert.alert-warning.col-sm-12 #{message}
          .form-group
            .col-md-offset-2
              h4 Faça o login necessário. <small>Estamos quase lá...
          .form-group
            label(for="usuario").control-label.col-md-3 Usuario:
            .col-md-6
              input(placeholder="usuario", name="username", autofocus).form-control#usuario
          .form-group
            label(for="senha").control-label.col-md-3 Senha:
            .col-md-6
              input(type="password", name="password", placeholder="senha").form-control#senha
          .form-group
            .col-md-6.col-md-offset-3
              .checkbox
                label
                  input(type="checkbox", name="remember")
                  | Lembrar
          .form-group
            .col-md-offset-3.col-md-6
              button(type="submit").btn.btn-default Conectar
